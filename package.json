{
  "name": "webext-options-sync",
  "version": "0.21.1",
  "description": "Helps you manage and autosave your extension's options.",
  "license": "MIT",
  "repository": "bfred-it/webext-options-sync",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "browser",
    "extension",
    "options",
    "sync",
    "webext",
    "chrome",
    "firefox"
  ],
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "test": "xo && tsc",
    "prepublish-only": "tsc",
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "xo": {
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "import/no-unresolved": "warn"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript"
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/chrome": "0.0.86",
    "@types/dom-inputevent": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint-config-xo-typescript": "^0.14.0",
    "typescript": "^3.5.2",
    "xo": "*"
  },
  "dependencies": {
    "type-fest": "^0.5.2",
    "webext-detect-page": "^0.9.1"
  }
}
